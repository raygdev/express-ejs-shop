<%- include('../includes/head.ejs')  %> 
<link rel="stylesheet" href="/css/shop.css">
</head>
<body>
    <%- include('../includes/navigation.ejs')  %> 
    <h1 class="main-title"><%= content %> </h1>
<div class="flex">
    <% if (!products[0]) { %>
     <h1>Sorry, No Products Here</h1>
    <% } %>
     
    <% products.forEach(product => { %>
        <div data-aos='fade-in' class="grid">
            <h2><%= product.title %> </h2>
            <p class="description"><%= product.description %> </p>
            <p class="price"><%= product.price  %> </p>
            <a class=" btn details" href="/products/<%= product.id %>">Details</a>
            <!-- <a class="add" href="/cart">Add To Cart</a> -->
            <%- include('../includes/add-to-cart', {product:product})  %>
        </div>
    <% }) %>  
</div>  
    
<%- include('../includes/end.ejs') %> 

